<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/profilepic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_face" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/profilepic"
                android:text="John Doe"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/name"
                android:layout_below="@id/name"
                android:layout_marginTop="4dp"
                android:text="JohnD" />

            <View
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_below="@id/profilepic"
                android:layout_centerHorizontal="true"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/postlabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/profilepic"
                android:layout_toLeftOf="@id/divider"
                android:gravity="center_horizontal"
                android:text="Number of Posts" />

            <TextView
                android:id="@+id/favouritelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/profilepic"
                android:layout_toRightOf="@id/divider"
                android:gravity="center_horizontal"
                android:text="Number of Posts Liked" />

            <TextView
                android:id="@+id/post_number"
                android:layout_alignLeft="@id/postlabel"
                android:layout_alignRight="@id/postlabel"
                android:layout_below="@id/postlabel"
                android:layout_alignBottom="@id/divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="22sp"
                android:text="5"/>

            <TextView
                android:id="@+id/favourite_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/favouritelabel"
                android:layout_alignRight="@id/favouritelabel"
                android:layout_below="@id/favouritelabel"
                android:layout_alignBottom="@id/divider"
                android:gravity="center"
                android:textSize="22sp"
                android:text="5"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>